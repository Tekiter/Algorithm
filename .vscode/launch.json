    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) 시작",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/playground/algo",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/playground",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "C++ Debug playground/algo.cpp",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "g++ build active file",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Node.js Debug playground/algo.js",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/playground/algo.js",
            "console": "integratedTerminal"
        }
    ]
}